
rule "Homekit wants to turn living room lights on"
	when 
		Item homekit_livingroom_light received command
	then
	switch (receivedCommand) {
		case ON: {
			sendCommand(scene_light_livingroom, 1)	
		}
		case OFF: {
			sendCommand(scene_light_livingroom, 0)
		}
	}
end

